<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.balsikandar.crashreporter.sample.MainActivity">

    <Button
        android:id="@+id/nullPointer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NullPointer" />

    <Button
        android:id="@+id/indexOutOfBound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/nullPointer"
        android:text="IndexOutOfBound" />

    <Button
        android:id="@+id/classCastExeption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/indexOutOfBound"
        android:text="ClassCastExeption" />

    <Button
        android:id="@+id/arrayStoreException"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ArrayStoreException"
        android:layout_below="@+id/nullPointer"/>

</RelativeLayout>
